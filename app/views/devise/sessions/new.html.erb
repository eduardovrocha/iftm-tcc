<%= form_for(resource, :html => {:class => "form-signin"}, as: resource_name, url: new_user_session_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <div class="form-row">
      <div class="col">

        <h1 id="title-restrict-area" class="h3 mb-3 font-weight-normal">
          <a href="/" class="">
            <i class="fe fe-beginner feather feather_icon"></i>
            <strong>Educandoweb</strong>
          </a>
        </h1>

        <p><strong class="badge badge-info">Sign in</strong></p>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="form-row">
      <div class="col">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'access email', class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="form-row">
      <div class="col">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: 'password', class: "form-control" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br/>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="form-row">
      <div class="col">
        <%= f.submit "Sign in", :class => "btn-signin btn btn-primary" %>
        <span class="render-links"><%= render "devise/shared/links" %></span>
      </div>
    </div>
  </div>

<% end %>
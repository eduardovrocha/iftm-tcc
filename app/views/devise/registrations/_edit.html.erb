<%= form_for(User, as: @user, url: registration_path(current_user), html: {method: :put}) do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>

  <div class="form-group">
    <div class="form-row">
      <div class="col">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", :class => 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="form-row">
      <div class="col">
        <%= f.text_field :phone, autofocus: true, autocomplete: "phone", :class => 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="form-row">
      <div class="col">
        <%= f.text_field :email, autofocus: true, autocomplete: "email", :class => 'form-control', :disabled => true %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Update", :class => 'btn btn-primary' %>
  </div>

<% end %>
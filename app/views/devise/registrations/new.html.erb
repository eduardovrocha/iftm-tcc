<%= form_for(resource, :html => {:class => "form-signin"}, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="form-group">
    <div class="">
      <h1 id="title-restrict-area" class="h3 mb-3 font-weight-normal">
        <a href="/" class="">
          <i class="fe fe-shopping-bag feather feather_icon"></i>
          <strong>MyShop</strong>
        </a>
      </h1>
      <p><strong class="badge badge-info">Sign up</strong></p>
    </div>
  </div>

  <div class="form-group">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>

  <div class="signin-block">

    <div class="form-group">
      <div class="form-row">
        <div class="col">
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'full name', class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="form-row">
        <div class="col">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'access email', class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="form-row">
        <div class="col">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: 'password', class: "form-control" %>

        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="form-row">
        <div class="col">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'confirm password', class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="form-row">
        <div class="col">
          <%= f.text_field :phone, autofocus: true, autocomplete: "phone", placeholder: 'phone number', class: "fone form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="form-row">

        <%= f.submit "Sign up", :class => "btn-signin btn btn-primary" %>

        <div class="">
          <span class="render-links" style="width: 100%"><%= render "devise/shared/links" %></span>
        </div>

      </div>
    </div>

  </div>

<% end %>

<div class="container dark-grey-text mt-5" style="margin-top: 0px !important;">

  <div class="row">

    <div class="col-sm-3">

      <div class="form-group">
        <div class="form-row">
          <div class="col">
            <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar img-circle img-thumbnail" alt="avatar">
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="form-group">
          <label for="exampleFormControlFile1">Upload profile picture</label>
          <input type="file" disabled class="form-control-file" id="exampleFormControlFile1">
        </div>
      </div>

    </div>

    <div class="col-sm-9">

      <div class="form-group">
        <div class="form-row">
          <div class="col">

            <ul id="profile-options" class="nav nav-tabs" role="tablist">

              <li class="nav-item">
                <a class="nav-link active" id="user-info-tab" href="#user-info" data-toggle="tab">My Profile</a>
              </li>

              <li class="nav-item">
                <a class="nav-link" id="user-orders-tab" href="#user-orders" data-toggle="tab">My Orders</a>
              </li>

            </ul>

          </div>
        </div>
      </div>

      <div class="tab-content" id="my-tab-content">

        <div class="tab-pane fade show active" id="user-info" role="tabpanel" aria-labelledby="user-info-tab">
          <%= render 'devise/registrations/edit', :locals => {:resource => @user, :resource_name => "User"} %>
        </div>

        <div class="tab-pane fade" id="user-orders" role="tabpanel" aria-labelledby="user-orders-tab">
          <%= render 'orders', user_orders: @user_orders %>
        </div>

      </div>

    </div>

  </div>
</div>
</div>
<div class="container dark-grey-text mt-5" style="margin-top: 0px !important;">

  <div class="row">

    <div id="cart-body" class="col-md-12" data-controller="cart" data-info="[{'cart':'name'}]">

      <h4 class="d-flex justify-content-between align-items-center mb-3">
        <span class="text-muted"><i class="fe fe-cart" style="font-size: 24px"></i> Your cart</span>
        <span id="your-cart-items" class="badge badge-primary badge-pill">not defined !</span>
      </h4>

      <hr>

      <!-- cart-products -->
      <ul id="cart-products" class="list-group mb-3">

        <%= render 'item' %>

        <li id="" class="list-group-item d-flex justify-content-between">
          <span><strong>Total (USD)</strong></span>
          <span>$ <strong id="total-value">0</strong></span>
        </li>
      </ul>

      <!-- buttons action -->

      <div class="form-row">
        <div class="form-group" style="width: 100%">
          <div class="col" style="text-align: right; padding-right: 6px;">
            <%= link_to 'Keep shopping', '/', :class => 'btn btn-secondary' %>
            <% if user_signed_in? %>
              <button type="button" class="btn btn-primary" data-userId="<%= current_user.id %>"  data-action="click->cart#checkCart", id="finish-order">Finish Order</button>
            <% else %>
              <%= link_to 'Finish Order', new_user_session_path, id: 'finish-order', :class => 'btn btn-warning' %>
            <% end %>
          </div>
        </div>
      </div>

      <%= render :partial => 'shop/carts/confirm' %>

    </div>

  </div>

</div>
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4" data-controller="products">

  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
    <h1 class="h2"><i class="fe-h2 fe-gift feather_icon"></i>Categories</h1>
  </div>

  <p id="notice"><%= notice %></p>

  <table class="table">
    <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @categories.each do |category| %>
      <tr>
        <th scope="row"><%= category.id %></th>
        <td><%= category.name %></td>
        <th>
          <div class="btn-toolbar fix-right" role="toolbar" aria-label="Toolbar with button groups">
            <div class="btn-group btn-group-sm mr-2" role="group" aria-label="First group">
              <%= link_to category_path(category), :class => 'btn btn-secondary' do %>
                <i class="fe with_label fe-eye feather_icon span_with_feather"></i> Show
              <% end %>
              <%= link_to edit_category_path(category), :class => 'btn btn-secondary' do %>
                <i class="fe with_label fe-line-chart feather_icon span_with_feather"></i>Edit
              <% end %>
              <%= link_to category_path(category), method: :delete, data: {confirm: 'Are you sure?'}, :class => 'btn btn-secondary' do %>
                <i class="fe with_label fe-trash feather_icon span_with_feather"></i>Delete
              <% end %>
            </div>
          </div>
        </th>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Category', new_category_path, :class => 'btn btn-primary' %>

</main>
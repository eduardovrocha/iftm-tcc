<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">

  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">About Order # <%= @order.id %></h1>
  </div>

  <div class="form-group">
    <div class="form-row">

      <div class="col">
        <label><strong>Date</strong></label>
        <p><%= @order.moment %></p>
      </div>

      <div class="col">
        <label><strong>Status</strong></label>
        <p><span class="badge badge-info"><%= show_order_status(@order.order_status) %></span></p>
      </div>

      <div class="col">
        <label><strong>Total</strong></label>
        <p>$ <%= @order.total %></p>
      </div>

    </div>
  </div>

  <div class="form-group">
    <div class="form-row">
      <div class="table-responsive">
        <table class="table">
          <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Product Name</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
            <th scope="col">Sub Total</th>
          </tr>
          </thead>
          <tbody>
          <% @order.order_items.each do |order_item| %>
            <tr>
              <th scope="row"></th>
              <td><%= order_item.product.name %></td>
              <td>$ <%= number_with_precision(order_item.price, precision: 2) %></td>
              <td><%= order_item.quantity %></td>
              <td>$ <%= number_with_precision(order_item.sub_total, precision: 2) %></td>
            </tr>
          <% end %>
          </tbody>
          <tfoot>
          <tr>
            <th colspan="3"></th>
            <th colspan="3"></th>
          </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>

</main>